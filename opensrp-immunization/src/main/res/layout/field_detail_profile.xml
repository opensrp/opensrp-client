<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="6">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/field_detail_info_table1"
            android:background="@drawable/listview_background_rounded"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:stretchColumns="*"
            android:shrinkColumns="1"
            android:layout_marginRight="1dp">
        </TableLayout>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/field_detail_info_table2"
            android:background="@drawable/listview_background_rounded"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:stretchColumns="*"
            android:shrinkColumns="1"
            android:layout_marginLeft="1dp">
        </TableLayout>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="5dp" android:background="#ffffff">
    </LinearLayout>

</LinearLayout>