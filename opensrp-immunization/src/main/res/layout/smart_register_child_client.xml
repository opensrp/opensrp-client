<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="@dimen/list_item_height" android:background="#eeeeee"
    android:weightSum="21">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/child_profile_info_layout"
        android:layout_weight="6"
        android:background="#ffffff"
        android:layout_marginRight="1dp">

        <ImageView
            android:layout_width="@dimen/client_profile_pic_width"
            android:layout_height="80dp"
            android:id="@+id/child_profilepic"
            android:src="@drawable/child_boy_infant"
            android:layout_margin="2dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Child ID of 4teen"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:id="@+id/child_id"
                android:textColor="@color/button_material_dark"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:text="Child Name"
                android:id="@+id/child_name"
                android:textColor="@color/light_blue"
                android:textSize="17sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:singleLine="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mother Name"
                style="@style/CustomFontTextViewStyle.ListView.Normal"
                android:id="@+id/child_mothername"
                android:textSize="17sp"
                android:maxLines="2"
                android:singleLine="false"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Father name"
                style="@style/CustomFontTextViewStyle.ListView.Normal"
                android:id="@+id/child_fathername"
                android:textSize="17sp"
                android:maxLines="2"
                android:singleLine="false"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:background="#ffffff"
        android:layout_marginRight="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22-22-2222"
            style="@style/CustomFontTextViewStyle.ListView.Normal"
            android:id="@+id/child_birthdate"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            style="@style/CustomFontTextViewStyle.ListView.Normal"
            android:id="@+id/child_age"
            android:textSize="17sp"/>
    </LinearLayout>


    <LinearLayout
    android:layout_height="match_parent"
    android:layout_width="0dp"
    android:layout_weight="2"
        android:background="#ffffff"
        android:layout_marginRight="1dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EPI Number"
        style="@style/CustomFontTextViewStyle.ListView.Medium"
        android:id="@+id/child_epi_number"
        android:textColor="@color/light_blue"
        android:textSize="17sp"
        android:textStyle="bold"/>
</LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:background="#ffffff"
        android:layout_marginRight="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            style="@style/CustomFontTextViewStyle.ListView.Normal"
            android:id="@+id/child_contact_number"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:background="#ffffff"
        android:layout_marginRight="1dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/child_last_vaccine_check"
                android:src="@drawable/ic_yes_small"
                android:layout_gravity="right"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vaccine Name"
                android:textSize="17sp"
                android:textStyle="bold"
                android:id="@+id/child_last_vaccine"
                android:maxLines="2"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                 />

        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Last Vaccine Date"
                android:id="@+id/child_last_visit_date"
                style="@style/CustomFontTextViewStyle.ListView.Normal"
                android:textSize="17sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="26dp" />

        </FrameLayout>

    </LinearLayout>

    <FrameLayout android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:background="@color/transparent_blue"
        android:id="@+id/child_next_visit_holder">

    <ImageView
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:src="@drawable/syringe" android:scaleType="fitEnd"
        android:alpha=".6"
        android:id="@+id/next_vaccine_image"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Vaccine"
                android:textStyle="bold"
                android:id="@+id/child_next_visit_vaccine"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:singleLine="false"
                android:maxLines="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Visit Date"
                android:textStyle="bold"
                android:id="@+id/child_next_visit_date"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:textSize="17sp" />
            </LinearLayout>
    </LinearLayout>
    </FrameLayout>
</LinearLayout>
