<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stock_vaccine_table_daily"
        android:layout_margin="1dp"
        android:padding="1dp" android:background="#eeeeee"
        android:stretchColumns="*">

        <TableRow>
            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="2dp"
                android:layout_weight="1" android:layout_span="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    style="@style/CustomFontTextViewStyle.ListView.Medium"
                    android:text="Daily Used Stock Summary - "
                    android:textAlignment="center"
                    android:textColor="@color/text_black"
                    android:layout_gravity="center_horizontal"
                    android:textSize="19dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/reporting_period_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    style="@style/CustomFontTextViewStyle.ListView.Medium"
                    android:text="Day"
                    android:textColor="@color/text_black"
                    android:textSize="19dp"
                    android:textStyle="normal|bold" />

            </LinearLayout>
        </TableRow>
        <TableRow android:background="@color/status_bar_text_almost_white"
            android:weightSum="17">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle.ListView.Small.NoPadding" android:textStyle="bold"
                android:textSize="14dp"
                android:text="DAY"
                android:textColor="@color/text_black"
                android:layout_weight="1"
                android:paddingLeft="3dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle.ListView.Small.NoPadding" android:textStyle="bold"
                android:textSize="14dp"
                android:text="BCG"
                android:textColor="@color/text_black"
                android:layout_weight="2"
                android:paddingLeft="3dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle.ListView.Small.NoPadding" android:textStyle="bold"
                android:textSize="14dp"
                android:text="OPV"
                android:textColor="@color/text_black"
                android:layout_weight="2"
                android:paddingLeft="3dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle.ListView.Small.NoPadding" android:textStyle="bold"
                android:textSize="14dp"
                android:text="IPV"
                android:textColor="@color/text_black"
                android:layout_weight="2"
                android:paddingLeft="3dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle.ListView.Small.NoPadding" android:textStyle="bold"
                android:textSize="14dp"
                android:text="PCV"
                android:textColor="@color/text_black"
                android:layout_weight="2"
                android:paddingLeft="3dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle.ListView.Small.NoPadding" android:textStyle="bold"
                android:textSize="14dp"
                android:text="PENTA"
                android:textColor="@color/text_black"
                android:layout_weight="2"
                android:paddingLeft="3dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle.ListView.Small.NoPadding" android:textStyle="bold"
                android:textSize="14dp"
                android:text="MEASLES"
                android:textColor="@color/text_black"
                android:layout_weight="2"
                android:paddingLeft="3dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle.ListView.Small.NoPadding" android:textStyle="bold"
                android:textSize="14dp"
                android:text="TT"
                android:textColor="@color/text_black"
                android:layout_weight="2"
                android:paddingLeft="3dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle.ListView.Small.NoPadding" android:textStyle="bold"
                android:textSize="14dp"
                android:text="TOTAL"
                android:textColor="@color/text_black"
                android:layout_weight="2"
                android:paddingLeft="3dp" />

        </TableRow>
    </TableLayout>

</LinearLayout>