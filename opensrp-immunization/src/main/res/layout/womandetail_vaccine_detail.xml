<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="6">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/woman_vaccine_table"
        android:layout_margin="1dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/listview_background_rounded"
        android:textAlignment="center"
        android:layout_weight="1">

        <TableRow android:background="@color/status_bar_text_almost_white"
            android:id="@+id/woman_vaccine_table_header" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:text="Vaccination Summary"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textColor="@color/text_black" android:layout_span="2" android:layout_weight="1"
                android:textStyle="normal|bold" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/woman_pregnancy_table"
        android:layout_margin="1dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/listview_background_rounded"
        android:layout_weight="1">

        <TableRow android:background="@color/status_bar_text_almost_white"
            android:id="@+id/woman_pregnancy_table_header">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:text="Pregnancy Details"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textColor="@color/text_black" android:layout_span="2" android:layout_weight="1"
                android:textStyle="normal|bold" />
        </TableRow>
    </TableLayout>

    </LinearLayout>

</LinearLayout>