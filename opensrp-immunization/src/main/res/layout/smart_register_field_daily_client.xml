<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stock_detail_holder"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#e0e0e0">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:background="#ffffff">

        <org.ei.opensrp.core.widget.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd-MM-yyyy"
            android:id="@+id/day"
            style="@style/CustomFontTextViewStyle.ListView.Small.Bold"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:background="#ffffff">

        <org.ei.opensrp.core.widget.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20000"
            android:id="@+id/bcg_used"
            style="@style/CustomFontTextViewStyle.ListView.Small"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"        
        android:layout_marginLeft="1dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:background="#ffffff">


    <org.ei.opensrp.core.widget.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20000"
            android:id="@+id/opv_used"
            style="@style/CustomFontTextViewStyle.ListView.Small"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:background="#ffffff">


    <org.ei.opensrp.core.widget.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20000"
            android:id="@+id/ipv_used"
            style="@style/CustomFontTextViewStyle.ListView.Small"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:background="#ffffff">


    <org.ei.opensrp.core.widget.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20000"
            android:id="@+id/penta_used"
            style="@style/CustomFontTextViewStyle.ListView.Small"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:background="#ffffff">


    <org.ei.opensrp.core.widget.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20000"
            android:id="@+id/measles_used"
            style="@style/CustomFontTextViewStyle.ListView.Small"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:background="#ffffff">


    <org.ei.opensrp.core.widget.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20000"
            android:id="@+id/pcv_used"
            style="@style/CustomFontTextViewStyle.ListView.Small"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:background="#ffffff">


    <org.ei.opensrp.core.widget.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20000"
            android:id="@+id/tt_used"
            style="@style/CustomFontTextViewStyle.ListView.Small"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:background="#ffffff">


    <org.ei.opensrp.core.widget.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20000"
            android:id="@+id/total_used"
            style="@style/CustomFontTextViewStyle.ListView.Small.Bold"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:background="#ffffff">


    <org.ei.opensrp.core.widget.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20000"
            android:id="@+id/total_inhand"
            style="@style/CustomFontTextViewStyle.ListView.Small.Bold"/>
    </LinearLayout>

</LinearLayout>