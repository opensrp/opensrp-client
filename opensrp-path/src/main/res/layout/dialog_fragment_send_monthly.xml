<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <org.ei.opensrp.view.customControls.CustomFontTextView
        android:id="@+id/tv_send_monthly_draft"
        style="@style/CustomFontTextViewStyle.ClientList.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:text="Send the May 2017 report?"
        android:textSize="24sp" />
    <org.ei.opensrp.view.customControls.CustomFontTextView
        android:id="@+id/tv_send_monthly_draft_date"
        style="@style/CustomFontTextViewStyle.ClientList.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:text="Send the May 2017 report?"
        android:textSize="24sp" />
    <org.ei.opensrp.view.customControls.CustomFontTextView
        android:id="@+id/tv_send_monthly_draft_user"
        style="@style/CustomFontTextViewStyle.ClientList.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:text="Send the May 2017 report?"
        android:textSize="24sp" />

</LinearLayout>